<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape
        xmlns:android="http://schemas.android.com/apk/res/android">
        <corners
            android:radius="5dp"
            />
        <solid
            android:color="@color/colorPrimary"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="110dp"
            android:height="110dp"
            />
        <!--/Borda-->
        <stroke
            android:width="1.3dp"
            android:color="@color/black"
            />
    </shape>

</item><!-- pressed -->
<item android:state_focused="true">
    <shape
        xmlns:android="http://schemas.android.com/apk/res/android">
        <corners
            android:radius="5dp"
            />
        <solid
            android:color="@color/black"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="110dp"
            android:height="110dp"
            />
        <!--/Borda-->
        <stroke
            android:width="1.3dp"
            android:color="@color/black"
            />
    </shape>
</item><!-- focused -->

<item>
    <shape
        xmlns:android="http://schemas.android.com/apk/res/android">
        <corners
            android:radius="5dp"
            />
        <solid
            android:color="@color/white"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="110dp"
            android:height="110dp"
            />
        <!--/Borda-->
        <stroke
            android:width="1.3dp"
            android:color="@color/black"
            />
    </shape>

</item><!-- default -->
</selector>



