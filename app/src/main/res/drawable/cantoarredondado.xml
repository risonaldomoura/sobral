<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android">
                <corners
                    android:radius="5dp"
                    />
                <solid
                    android:color="#0c9dd4"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <size
                    android:width="110dp"
                    android:height="110dp"
                    />
            </shape>

        </item><!-- pressed -->
        <item android:state_focused="true">
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android">
                <corners
                    android:radius="5dp"
                    />
                <solid
                    android:color="#0c9dd4"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <size
                    android:width="110dp"
                    android:height="110dp"
                    />
            </shape>
        </item><!-- focused -->

        <item>
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android">
                <corners
                    android:radius="5dp"
                    />
                <solid
                    android:color="#2873b8"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <size
                    android:width="110dp"
                    android:height="110dp"
                    />
            </shape>

        </item><!-- default -->
    </selector>


</shape>


