<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btn_marcar_conteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:text="Marcar conteúdo"
        android:gravity="center"
        android:textSize="16sp"
        android:clickable="true"
        android:background="@drawable/selector_item_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/texto_cinza"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/btn_desmarcar_conteúdo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:text="Desmarcar conteúdo"
        android:gravity="center"
        android:textSize="16sp"
        android:clickable="true"
        android:background="@drawable/selector_item_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/texto_cinza"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/btn_abrir_anotacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:text="Abrir anotações deste conteúdo"
        android:gravity="center"
        android:textSize="16sp"
        android:clickable="true"
        android:background="@drawable/selector_item_view"/>




</LinearLayout>