<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xingu.inteceleri.xingu.sobral.inteceleri.sobral.Config_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/btn_config_bimestre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/effect_bottom_act_config">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bimestre"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Clique para configurar"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:background="@drawable/effect_bottom_act_config">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conta"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Clique para sair"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/txtcontato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Contato"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TEL: "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txttel"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoLink="phone"
                    android:text=" +55 91 988390610"
                    android:textColorLink="@color/black"
                    android:textSize="16sp"/>/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Email: "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"/>/>

                <TextView
                    android:id="@+id/txtendemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autoLink="email"
                    android:text="contato@inteceleri.com.br"
                    android:textColorLink="@android:color/black"
                    android:textSize="16sp"/>/>

            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageView
                android:id="@+id/imglogointeceleri"
                android:layout_marginTop="8dp"
                android:layout_width="89dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo_inteceleri" />

            <ImageView
                android:id="@+id/imglogoapp"
                android:layout_width="195dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/logo_sobral"
                android:layout_weight="0.19" />

            <TextView
                android:id="@+id/txtbeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="VersÃ£o 1.0"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
